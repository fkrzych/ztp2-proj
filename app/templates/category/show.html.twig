{% extends 'base.html.twig' %}

{% block title %}
    {{ 'category.details'|trans }}
{% endblock %}

{% block body %}
    {% if category is defined and category|length %}
        <dl>
            <dt>{{ 'label.category_name'|trans }}</dt>
            <dd>{{ category.name }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    <a href="{{ url('category_index') }}" title="{{ 'categories.link'|trans }}">{{ 'categories.link'|trans }}</a>
{% endblock %}