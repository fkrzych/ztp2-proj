{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user.details'|trans }}
{% endblock %}

{% block body %}
    {% if user is defined and user|length %}
        <dl>
            <dt>{{ 'label.user_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label.roles'|trans }}</dt>
            <dd>{{ user.roles | join(' | ') }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    <a href="{{ url('user_index') }}" title="{{ 'users.link'|trans }}">{{ 'users.link'|trans }}</a>
{% endblock %}